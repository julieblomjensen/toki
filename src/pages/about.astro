    margin: 70px auto;
    line-height: 1.6;
    font-size: 15px;
    padding: 0 20px;
  }

  .tokifamily h2 {
    margin-bottom: 30px;
  }

  .family {
    max-width: 1100px;
    margin: 80px auto;
  }

  .family h2 {
    margin-bottom: 70px;
  }

  .person,
  .omvendt {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 120px;
  }

  .omvendt {
    grid-template-columns: 1fr 1fr;
  }

  .person-image img {
    width: 80%;
    height: auto;
    border-radius: 4px;
  }

  .person-details {
    font-size: 15px;
    line-height: 1.7;
    margin-bottom: 250px;
  }

  @media (max-width: 900px) {
    .person,
    .omvendt {
      grid-template-columns: 1fr;
      text-align: left;
    }

    .omvendt .person-image {
      order: -1; /*Billede skal stå først på mobil versionen*/
    }
  }
</style>
