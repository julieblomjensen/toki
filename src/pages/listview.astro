---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Case.astro";

import { createClient } from "@supabase/supabase-js";

const supabase = createClient(
  "https://fldcgmbbvootvukyqper.supabase.co",
  "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImZsZGNnbWJidm9vdHZ1a3lxcGVyIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjMxMjM5MzYsImV4cCI6MjA3ODY5OTkzNn0.CRlMSRZOMuHecVC7ms2M1ik7nlyAyuq8O861Y7CvFYA"
);

const { data, error } = await supabase.from("Cases").select("*");

if (error) {
  console.error(error);
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/listview.css" />
    <title>Cases</title>
  </head>
  <body>
    <Header />

    <main>
      <section class="cases">
        <h2>Previous cases</h2>
        <p class="intro">
          <strong
            >From insight to impact, we balance strategy, storytelling, and sustainability <br />to
            deliver packaging that truly matters.</strong
          >
        </p>
        <p>
          We collaborate with companies that sell physical products. We turn <br />packaging into
          strategic lever - creating value for business, customers, <br />and planet.
        </p>
        <p>
          Our clients are decisionmakers within B2B and B2C who want to:<br />
          → Use packaging as a strategic tool<br />
          → Create context between design, production, and experience<br />
          → Think sustainably and efficiently
        </p>
        <p>Get an overview of our previous cases below.</p>

        <div class="cases-container">
          <div class="casegrid">
            {data?.map((cases) => <Card key={cases.id} data={cases} />)}
          </div>
        </div>
      </section>

      <section class="offer">
        <h2 class="offertitle">Get an offer</h2>
        <p>Fill out your information below and our team will contact you</p>

        <form>
          <div class="form-row">
            <label>Company: *</label>
            <input type="text" required />
          </div>
          <div class="form-row">
            <label>Email address: *</label>
            <input type="email" required />
          </div>
          <div class="form-row full">
            <label>Your case: *</label>
            <textarea required></textarea>
          </div>
          <button type="submit">Submit</button>
        </form>
      </section>
    </main>

    <Footer />
  </body>
</html>

<style>
  /*Main*/
  main {
    max-width: 1100px;
    margin: 0 auto;
    margin-top: 200px;
  }

  .offertitle {
    text-align: center;
    font-weight: 500;
    margin-top: 2rem;
  }

  p {
    line-height: 1.6;
    font-size: 0.95rem;
  }

  strong {
    display: block;
    margin-bottom: 1rem;
  }

  /*Cases*/
  .cases-container {
    margin-top: 3rem;
  }

  /* heading */
  .cases-container .intro {
    text-align: left;
    margin-bottom: 1rem;
  }

  /* grid layout */
  .cases-container .casegrid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 10px;
    margin-top: 2rem;
  }

  /* cards */
  .cases-container .case {
    position: relative;
    overflow: hidden;
    border-radius: 6px;
  }

  .cases-container .case img {
    width: 100%;
    height: auto;
    border-radius: 4px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .cases-container .case:hover img {
    transform: scale(1.1);
  }

  .cases-container .case span {
    position: absolute;
    bottom: 10px;
    left: 10px;
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  /*Form*/
  .offer {
    background-color: #e9e6df;
    text-align: center;
    padding: 3rem 1rem 4rem;
    margin-top: 4rem;
  }

  .offer h2 {
    margin-bottom: 0.5rem;
  }

  form {
    max-width: 600px;
    margin: 2rem auto 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .form-row {
    flex: 1;
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .form-row.full {
    flex-basis: 100%;
  }

  label {
    font-size: 0.9rem;
    margin-bottom: 0.3rem;
  }

  input,
  textarea {
    padding: 0.6rem;
    border: 1px solid rgba(80, 47, 45, 1);
    border-radius: 4px;
    font-family: inherit;
    font-size: 0.95rem;
    background-color: #fff;
  }

  textarea {
    min-height: 120px;
    resize: vertical;
  }

  button {
    background-color: rgba(242, 237, 189, 1);
    color: #4a4a4a;
    border: 1px solid rgba(80, 47, 45, 1);
    border-radius: 4px;
    padding: 15px 40px;
    font-size: 16px;
    cursor: pointer;
    width: 100%;
    margin-top: 10px;
    margin-bottom: 70px;
  }

  button:hover {
    background-color: #e3dba5;
  }

  @media (max-width: 600px) {
    .casegrid {
      grid-template-columns: 1fr;
    }

    form {
      flex-direction: column;
    }
  }
</style>
